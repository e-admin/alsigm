<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	
	<parent>		
		<groupId>es.ieci.tecdoc.invesdoc</groupId>
		<artifactId>invesdoc-modules</artifactId>
		<version>9.2.3.1</version>
	</parent>
	
	<artifactId>invesdoc-main</artifactId>	
	<modelVersion>4.0.0</modelVersion>	
	<packaging>pom</packaging>
	<description>Invesdoc Main</description>
	
	<properties>
		<project.build.sourceEncoding>ISO-8859-1</project.build.sourceEncoding>
		
		<log4j.version>1.2.8</log4j.version>
		<xerces.version>2.7.1</xerces.version>
		<bcprov.version>136</bcprov.version>
		<fplibrary.version>1.0</fplibrary.version>
	</properties>	

	<build>
		<plugins>			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>	
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0.2</version>
				<configuration>
					<source>${jdk.version}</source>
					<target>${jdk.version}</target>
					<encoding>iso-8859-1</encoding>
					<fork>true</fork>
					<executable>${JAVA_1_5_HOME}/bin/javac</executable>
					<compilerVersion>${jdk.version}</compilerVersion>
		            <meminitial>256m</meminitial>
		            <maxmem>512m</maxmem>									
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>2.1</version>
				<executions>
					<execution>
						<id>attach-sources</id>
						<goals>
							<goal>jar-no-fork</goal>
						</goals>
					</execution>
				</executions>
			</plugin>							
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>${log4j.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>xerces</groupId>
			<artifactId>xercesImpl</artifactId>
			<version>${xerces.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>bouncycastle</groupId>
			<artifactId>bcprov-jdk14</artifactId>
			<version>${bcprov.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>fplibrary</groupId>
			<artifactId>fplibrary</artifactId>
			<version>${fplibrary.version}</version>
			<scope>provided</scope>
		</dependency>				
	</dependencies>
</project>