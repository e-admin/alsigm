		</dependency>
		<dependency>
			<version>${hibertane.version}</version>
			<groupId>org.hibernate</groupId>
			<artifactId>hibernate-infinispan</artifactId>
			<exclusions>
				<exclusion>
					<groupId>jgroups</groupId>
					<artifactId>jgroups</artifactId>
