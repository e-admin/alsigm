		<itext.version>2.1.7</itext.version> <!-- by jasperreports  -->
		<jasperreports.version>3.7.6</jasperreports.version>
		<jaxws-api.version>2.1-1</jaxws-api.version>
		<jstl.version>1.0.6</jstl.version>
		<jta.version>1.1</jta.version>
