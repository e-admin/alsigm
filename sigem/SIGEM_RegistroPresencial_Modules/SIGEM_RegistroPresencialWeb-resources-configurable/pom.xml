	<modelVersion>4.0.0</modelVersion>
	<artifactId>sigem_registroPresencialWeb-configurable-resources</artifactId>
	<packaging>pom</packaging>

	<description>
		Modulo de Recursos de Configuracion del Registro Presencial Web de SIGEM
	</description>
	<properties>
		<unpack.config.directory>${project.build.directory}/generated-resources</unpack.config.directory>
		<filter.common>${project.basedir}/../SIGEM_RegistroPresencialWeb/src/main/filters/Common.properties</filter.common>
		<filter.compulsa>${project.basedir}/../SIGEM_RegistroPresencialWeb/src/main/filters/compulsa/ISicresCompulsa.properties</filter.compulsa>
		<filter.authentication/>
		<filter.database/>
		<filter.server/>
		<filter.system/>
		<filter.repository/>
	</properties>

	<build>
		<resources>
			<resource>
				<filtering>true</filtering>
				<directory>
					${unpack.config.directory}
				</directory>
			</resource>
		</resources>
		<filters>
			<filter>${project.basedir}/../SIGEM_RegistroPresencialWeb/src/main/filters/Common.properties</filter>
		</filters>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>dependency-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack-configurable-resources</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>es.ieci.tecdoc.isicres</groupId>
									<artifactId>ISicres-resources-configurable</artifactId>
									<version>${isicres.version}</version>
									<type>zip</type>
								</artifactItem>
							</artifactItems>
							<outputDirectory>
								${unpack.config.directory}/SIGEM_RegistroPresencialWeb
							</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.5</version>
				<executions>
					<execution>
						<id>copy-resources</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${basedir}/target/resources-filtered</outputDirectory>
							<filters>
								<filter>${filter.generic.system}</filter>
							</filters>
							<useBuildFilters>false</useBuildFilters>
							<escapeWindowsPaths>false</escapeWindowsPaths>
							<escapeString>false</escapeString>
							<resources>
								<resource>
									<directory>${basedir}/../SIGEM_RegistroPresencialWeb/src/main/filters/system</directory>
									<includes>
										<include>Unix.properties</include>
										<include>Windows.properties</include>
									</includes>
	      							<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>${assembly.plugin.version}</version>
				<configuration>
					<filters>
						<filter>${filter.common}</filter>
						<filter>${filter.authentication}</filter>
						<filter>${filter.database}</filter>
						<filter>${filter.server}</filter>
						<filter>${filter.system}</filter>
						<filter>${filter.repository}</filter>
						<filter>${filter.compulsa}</filter>
					</filters>
					<descriptors>
						<descriptor>
							src/main/assembly/dep-config.xml
						</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>assembly-resources-configurable</id>
						<goals>
							<goal>single</goal>
						</goals>
						<phase>package</phase>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>
