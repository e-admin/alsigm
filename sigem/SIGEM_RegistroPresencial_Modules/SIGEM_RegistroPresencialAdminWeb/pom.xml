	<build>
		<finalName>SIGEM_RegistroPresencialAdminWeb</finalName>

		<resources>
			<resource>
				<filtering>true</filtering>
				<directory>${basedir}/src/main/resources</directory>
			</resource>
			<resource>
				<filtering>true</filtering>
				<directory>${unpack.config.directory}</directory>
				<excludes>
					<exclude>resources/*.properties</exclude>
					<exclude>*.properties</exclude>
					<exclude>SIGEM_RegistroPresencial/Isicres/*.xml</exclude>
					<exclude>SIGEM_RegistroPresencial/Isicres/*.properties</exclude>
				</excludes>
			</resource>
			<resource>
				<filtering>true</filtering>
				<directory>${unpack.config.directory}/SIGEM_RegistroPresencial/Isicres</directory>
				<targetPath>SIGEM_RegistroPresencial</targetPath>
				<excludes>
					<exclude>**/log4j.xml</exclude>
				</excludes>
			</resource>
		</resources>


		<filters>
			<filter>src/main/filters/Common.properties</filter>
		</filters>

		<plugins>

			<!-- plugin de overlay correcto con dependencias -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1-alpha-1</version>
				<configuration>
					<!-- se configura esto para que haga el overlay de librerias correcto con ayuda del plugin de appfuse -->
					<dependentWarExcludes>WEB-INF/lib/*, WEB-INF/classes/Isicres/*, WEB-INF/classes/ISicresAdminWeb/*</dependentWarExcludes>
				</configuration>
			</plugin>

			<!-- Ficheros de configuracion de ISicres e ISicresAdmin -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>dependency-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack-config-resources</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>es.ieci.tecdoc.isicres</groupId>
									<artifactId>ISicres-resources-config</artifactId>
									<version>${isicres.version}</version>
									<type>zip</type>
								</artifactItem>
							</artifactItems>
							<outputDirectory>
								${unpack.config.directory}
							</outputDirectory>
						</configuration>
					</execution>
					<execution>
						<id>unpack-configurable-resources</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>es.ieci.tecdoc.isicres</groupId>
									<artifactId>ISicres-resources-configurable</artifactId>
									<version>${isicres.version}</version>
									<type>zip</type>
								</artifactItem>
							</artifactItems>
							<outputDirectory>
								${unpack.config.directory}/SIGEM_RegistroPresencial
							</outputDirectory>
						</configuration>
					</execution>
					<execution>
						<id>unpack-config-admin-resources</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>es.ieci.tecdoc.isicres.admin</groupId>
									<artifactId>ISicresAdmin-resources-config</artifactId>
									<version>${isicres.version}</version>
									<type>zip</type>
								</artifactItem>
							</artifactItems>
							<outputDirectory>
								${unpack.config.directory}
							</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.5</version>
				<executions>
					<execution>
						<id>copy-resources</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${basedir}/target/resources-filtered</outputDirectory>
							<filters>
								<filter>${filter.generic.system}</filter>
							</filters>
							<useBuildFilters>false</useBuildFilters>
							<escapeWindowsPaths>false</escapeWindowsPaths>
							<escapeString>false</escapeString>
							<resources>
								<resource>
									<directory>${basedir}/src/main/filters/system</directory>
									<includes>
										<include>Unix.properties</include>
										<include>Windows.properties</include>
									</includes>
	      							<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>

		<!-- plugin de overlay correcto con dependencias -->
		 	<plugin>
				<groupId>org.appfuse</groupId>
				<artifactId>maven-warpath-plugin</artifactId>
				 <version>2.0.2</version>
				 <extensions>true</extensions>
			      <executions>
			        <execution>
			          <goals>
			            <goal>add-classes</goal>
			          </goals>
			        </execution>
			      </executions>
			</plugin>

		</plugins>
	</build>

