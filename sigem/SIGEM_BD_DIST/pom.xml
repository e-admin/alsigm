<?xml version="1.0" encoding="UTF-8" standalone="no"?><project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>es.ieci.tecdoc.sigem</groupId>
		<artifactId>sigem_main</artifactId>
		<version>3.0.1-M3</version>
	</parent>

	<artifactId>sigem_bd_dist</artifactId>
	<packaging>pom</packaging>
	<description>Generación de distribución de Base de datos</description>	

	<build>
		<plugins>	
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack-csv</id>
						<phase>package</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
				                <artifactItem>
				                    <groupId>es.ieci.tecdoc.fwktd.modules.fwktd-csv</groupId>
				                    <artifactId>fwktd-csv-sql</artifactId>
				                    <version>${fwktd.csv.version}</version>
				                    <type>zip</type>
				                    <classifier>bd</classifier>
				                    <overWrite>true</overWrite>
				                    <outputDirectory>${basedir}/target/csv</outputDirectory>
				                    <includes>**/**.*</includes>
				                </artifactItem>
				            </artifactItems>
						</configuration>
					</execution>

					<execution>
						<id>unpack-audit</id>
						<phase>validate</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
				                <artifactItem>
				                    <groupId>es.ieci.tecdoc.fwktd.modules.fwktd-audit</groupId>
				                    <artifactId>fwktd-audit-sql</artifactId>
				                    <version>${fwktd.audit.version}</version>
				                    <type>zip</type>
				                    <classifier>bd</classifier>
				                    <overWrite>true</overWrite>
				                    <outputDirectory>${basedir}/target/audit</outputDirectory>
				                    <includes>**/**.*</includes>
				                </artifactItem>
				            </artifactItems>
						</configuration>
					</execution>
					
					<execution>
						<id>unpack-dir3</id>
						<phase>validate</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
				                <artifactItem>
				                    <groupId>es.ieci.tecdoc.fwktd.modules.fwktd-dir3</groupId>
				                    <artifactId>fwktd-dir3-sql</artifactId>
				                    <version>${fwktd.dir3.version}</version>
				                    <type>zip</type>
				                    <classifier>bd</classifier>
				                    <overWrite>true</overWrite>
				                    <outputDirectory>${basedir}/target/dir3</outputDirectory>
				                    <includes>**/**.*</includes>
				                </artifactItem>
				            </artifactItems>
						</configuration>
					</execution>
					
					<execution>
						<id>unpack-sir</id>
						<phase>validate</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
				                <artifactItem>
				                    <groupId>es.ieci.tecdoc.fwktd.modules.fwktd-sir</groupId>
				                    <artifactId>fwktd-sir-sql</artifactId>
				                    <version>${fwktd.sir.version}</version>
				                    <type>zip</type>
				                    <classifier>bd</classifier>
				                    <overWrite>true</overWrite>
				                    <outputDirectory>${basedir}/target/sir</outputDirectory>
				                    <includes>**/**.*</includes>
				                </artifactItem>
				            </artifactItems>
						</configuration>
					</execution>					
				</executions>
			</plugin>
							
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>${assembly.plugin.version}</version>
				<configuration>
					<descriptors>
						<descriptor>
							src/main/assembly/dep.xml
						</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>assembly-bd</id>
						<goals>
							<goal>single</goal>
						</goals>
						<phase>package</phase>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>