<?xml version="1.0" encoding="UTF-8" standalone="no"?><project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>es.ieci.tecdoc.sigem</groupId>
		<artifactId>sigem_main</artifactId>
		<version>3.0.1-M3</version>
	</parent>


	<artifactId>sigem_criptoValidacionWS</artifactId>
	<packaging>war</packaging>





	<dependencies>


		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>${log4j.version}</version>
		</dependency>

		<dependency>
			<groupId>es.ieci.tecdoc.sigem</groupId>
			<artifactId>sigem_criptoValidacion</artifactId>
			<version>${pom.version}</version>
			<exclusions>
				<exclusion>
					<groupId>jdom</groupId>
					<artifactId>jdom</artifactId>
				</exclusion>
				<exclusion>
					<groupId>oro</groupId>
					<artifactId>oro</artifactId>
				</exclusion>
				<exclusion>
					<groupId>xom</groupId>
					<artifactId>xom</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

		<dependency>
			<groupId>es.ieci.tecdoc.sigem</groupId>
			<artifactId>sigem_clasesBase</artifactId>
			<version>${pom.version}</version>
		</dependency>

		<dependency>
			<groupId>com.lowagie</groupId>
			<artifactId>itext</artifactId>
			<version>${itext.version}</version>
		</dependency>

		<!-- TODO a profile -->
		<dependency>
			<groupId>postgresql</groupId>
			<artifactId>postgresql</artifactId>
			<version>${postgresql.version}</version>
		</dependency>

	</dependencies>


	<build>
		<finalName>SIGEM_CriptoValidacionWS</finalName>
		<filters>
			<filter>${filter.generic.system}</filter>
		</filters>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>			
	</build>

	<profiles>

		<!-- Perfiles de construccion en funcion del S.O. -->
		<profile>
			<id>unix</id>
			<activation>
				<property>
					<name>unix</name>
				</property>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<filter.generic.system>${project.basedir}/../SIGEM_Config/src/main/filters/system/unix.properties</filter.generic.system>
			</properties>
		</profile>
		<profile>
			<id>win</id>
			<activation>
				<property>
					<name>win</name>
				</property>
			</activation>
			<properties>
				<filter.generic.system>${project.basedir}/../SIGEM_Config/src/main/filters/system/windows.properties</filter.generic.system>
			</properties>
		</profile>
		<profile>
			<id>generate-wsdl</id>
			<activation>

      		<property>
      			<name>generateWSDL</name>
      			<value>true</value>
      		</property>

      		</activation>

			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>axistools-maven-plugin</artifactId>
						<version>1.3</version>

						<configuration>
						<isServerConfig>true</isServerConfig>
						<inputFiles>
							<inputFile>${basedir}/src/main/webapp/wsdl/CriptoValidacionWebService.wsdl</inputFile>
						</inputFiles>

							<filename>CriptoValidacionWebService.wsdl</filename>
							<namespace>http://server.ws.validacion.cripto.sgm.tecdoc.ieci</namespace>
							<namespaceImpl>http://server.ws.validacion.cripto.sgm.tecdoc.ieci</namespaceImpl>
							<classOfPortType>ieci.tecdoc.sgm.cripto.validacion.ws.server.CriptoValidacionWebService</classOfPortType>
							<location>http://localhost:8080/SIGEM_CriptoValidacionWS/services/CriptoValidacionWebService</location>
							<bindingName>CriptoValidacionWebServiceSoapBinding</bindingName>
							<style>WRAPPED</style>
							<use>literal</use>
							<excludes>
							<exclude>getResultadoValidacionHashWS,getInfoCertificadoWS,getServicioCritpoValidacion</exclude>
							</excludes>


						</configuration>
						<executions>
							<execution>
								<goals>
											<goal>java2wsdl</goal>
								</goals>
							</execution>

						</executions>
						<dependencies>
							<dependency>
								<groupId>axis</groupId>
								<artifactId>axis</artifactId>
								<version>1.3</version>
							</dependency>

						</dependencies>
					</plugin>
				</plugins>
			</build>

		</profile>
		<profile>

			<id>generateDeployWSDD</id>
			<activation>
				<property>
					<name>generateDeployWSDD</name>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>axistools-maven-plugin</artifactId>
						<version>1.3</version>
									<configuration>
							<sourceDirectory>${basedir}/src/main/webapp/wsdl</sourceDirectory>
							<packageSpace>ieci.tecdoc.sgm.cripto.validacion.ws.server</packageSpace>
							<serverSide>false</serverSide>
							<verbose>true</verbose>
							<typeMappingVersion>1.2</typeMappingVersion>
							<subPackageByFileName>true</subPackageByFileName>
							<outputDirectory>${basedir}/src/test2/java</outputDirectory>
						</configuration>

						<executions>
							<execution>
								<goals>
									<goal>wsdl2java</goal>
								</goals>
							</execution>
						</executions>
						<dependencies>
							<dependency>
								<groupId>axis</groupId>
								<artifactId>axis</artifactId>
								<version>1.3</version>
							</dependency>
						</dependencies>
					</plugin>
				</plugins>
			</build>
		</profile>
	<profile>
			<id>generate-wsdd</id>
			<activation>

      		<property>
      			<name>generateWSDD</name>
      			<value>true</value>
      		</property>

      		</activation>

			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>axistools-maven-plugin</artifactId>
						<version>1.3</version>

						<configuration>
						<isServerConfig>true</isServerConfig>
						<inputFiles>
							<inputFile>${basedir}/src/main/webapp/wsdl/CriptoValidacionWebService.wsdl</inputFile>
						</inputFiles>



						</configuration>
						<executions>
							<execution>
								<goals>
									<goal>admin</goal>
								</goals>
							</execution>
						</executions>
						<dependencies>
							<dependency>
								<groupId>axis</groupId>
								<artifactId>axis</artifactId>
								<version>1.3</version>
							</dependency>

						</dependencies>
					</plugin>
				</plugins>
			</build>

		</profile>

		<profile>
			<id>websphere</id>
			<activation>
				<property>
					<name>websphere</name>
				</property>
			</activation>
			<build>
				<finalName>SIGEM_CriptoValWS</finalName>
			</build>
		</profile>
	</profiles>



</project>