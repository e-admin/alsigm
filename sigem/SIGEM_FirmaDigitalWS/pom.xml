<?xml version="1.0" encoding="UTF-8" standalone="no"?><project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>es.ieci.tecdoc.sigem</groupId>
		<artifactId>sigem_main</artifactId>
		<version>3.0.1-M3</version>
	</parent>
	
	<artifactId>sigem_firmaDigitalWs</artifactId>
	<packaging>war</packaging>
	

	
	
	<dependencies>
		
		<dependency>
			<groupId>axis</groupId>
			<artifactId>axis</artifactId>
			<version>1.3</version>
		</dependency>
		
		<dependency>
			<groupId>es.ieci.tecdoc.sigem</groupId>
			<artifactId>sigem_firmaDigital</artifactId>
			<version>${pom.version}</version>
			<exclusions>
				<exclusion>
					<groupId>axis</groupId>
					<artifactId>axis-ant</artifactId>
				</exclusion>
				<exclusion>
					<groupId>jdom</groupId>
					<artifactId>jdom</artifactId>
				</exclusion>
				<exclusion>
					<groupId>oro</groupId>
					<artifactId>oro</artifactId>
				</exclusion>
				<exclusion>
					<groupId>xom</groupId>
					<artifactId>xom</artifactId>
				</exclusion>
				<exclusion>
					<groupId>xpp3</groupId>
					<artifactId>xpp3_min</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

	</dependencies>
	<profiles>
	
		<!-- Perfiles de construccion en funcion del S.O. -->
		<profile>
			<id>unix</id>
			<activation>
				<property>
					<name>unix</name>
				</property>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<filter.generic.system>${project.basedir}/../SIGEM_Config/src/main/filters/system/unix.properties</filter.generic.system>
			</properties>
		</profile>
		<profile>
			<id>win</id>
			<activation>
				<property>
					<name>win</name>
				</property>
			</activation>
			<properties>
				<filter.generic.system>${project.basedir}/../SIGEM_Config/src/main/filters/system/windows.properties</filter.generic.system>
			</properties>
		</profile>
		
		<profile>
			<id>generate-wsdl</id>
			<activation>
      		
      		<property>
      			<name>generateWSDL</name>
      			<value>true</value>
      		</property>
      		
      		</activation>

			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>axistools-maven-plugin</artifactId>
						<version>1.3</version>

						<configuration>
						<isServerConfig>true</isServerConfig>
						<inputFiles>
							<inputFile>/src/main/webapp/wsdl/ServicioFirmaDigitalWebService.wsdl</inputFile>
						</inputFiles>
											
							<filename>${project.artifactId}.wsdl</filename>
							<namespace>http://server.ws.firma.cripto.sgm.tecdoc.ieci</namespace>
							<namespaceImpl>http://server.ws.firma.cripto.sgm.tecdoc.ieci</namespaceImpl>
							<classOfPortType>ieci.tecdoc.sgm.cripto.firma.ws.server.ServicioFirmaDigitalWebService</classOfPortType>  
							<location>http://localhost:8080/SIGEM_FirmaDigitalWS/services/FirmaDigitalWebService</location>
							<bindingName>FirmaDigitalWebServiceSoapBinding</bindingName>
							<style>WRAPPED</style>
							<use>literal</use>
							<excludes>
							<exclude>setCertificado,setCertInfo,setValidacionFirma,setFirmante</exclude>
							</excludes>
						
							
						</configuration>
						<executions>
							<execution>
								<goals>
									<goal>java2wsdl</goal>
								</goals>
							</execution>
						</executions>
						<dependencies>
							<dependency>
								<groupId>axis</groupId>
								<artifactId>axis</artifactId>
								<version>1.3</version>
							</dependency>

						</dependencies>
					</plugin>
				</plugins>
			</build>

		</profile>	
		<profile>
			<id>generate-wsdd</id>
			<activation>
      		
      		<property>
      			<name>generateWSDD</name>
      			<value>true</value>
      		</property>
      		
      		</activation>

			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>axistools-maven-plugin</artifactId>
						<version>1.3</version>

						<configuration>
						<isServerConfig>true</isServerConfig>
						<inputFiles>
							<inputFile>${basedir}/src/main/webapp/wsdl/ServicioFirmaDigitalWebService.wsdl</inputFile>
						</inputFiles>
											
							
							
						</configuration>
						<executions>
							<execution>
								<goals>
									<goal>admin</goal>
								</goals>
							</execution>
						</executions>
						<dependencies>
							<dependency>
								<groupId>axis</groupId>
								<artifactId>axis</artifactId>
								<version>1.3</version>
							</dependency>

						</dependencies>
					</plugin>
				</plugins>
			</build>

		</profile>	
	</profiles>
	
	<build>
		<finalName>SIGEM_FirmaDigitalWS</finalName>
		<filters>
			<filter>${filter.generic.system}</filter>
		</filters>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
	</build>

	
</project>