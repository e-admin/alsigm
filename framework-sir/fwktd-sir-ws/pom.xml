		<!-- DB2 -->
		<profile>
			<id>db2</id>
			<properties>
				<tomcat.context.file>${project.basedir}/src/test/resources/tomcat/context-db2.xml</tomcat.context.file>
			</properties>
			<build>
				<filters>
					<filter>${basedir}/src/main/filters/database/db2.properties</filter>
				</filters>
			</build>
		</profile>

		<!-- DB2/400 -->
		<profile>
			<id>db2_400</id>
			<build>
				<filters>
					<filter>${basedir}/src/main/filters/database/db2_400.properties</filter>
				</filters>
			</build>
		</profile>

		<!-- H2 -->
		<profile>
			<id>h2</id>
			<properties>
				<tomcat.context.file>${project.basedir}/src/test/resources/tomcat/context-h2.xml</tomcat.context.file>
			</properties>
			<build>
				<filters>
					<filter>${basedir}/src/main/filters/database/h2.properties</filter>
				</filters>
			</build>
		</profile>

		<!-- ORACLE -->
		<profile>
			<id>oracle</id>
			<properties>
				<tomcat.context.file>${project.basedir}/src/test/resources/tomcat/context-oracle.xml</tomcat.context.file>
			</properties>
			<build>
				<filters>
					<filter>${basedir}/src/main/filters/database/oracle.properties</filter>
				</filters>
			</build>
		</profile>

		<!-- POSTGRESQL -->
		<profile>
			<id>postgresql</id>
			<properties>
				<tomcat.context.file>${project.basedir}/src/test/resources/tomcat/context-postgresql.xml</tomcat.context.file>
			</properties>
			<build>
				<filters>
					<filter>${basedir}/src/main/filters/database/postgresql.properties</filter>
				</filters>
			</build>
		</profile>

		<!-- SQLSERVER -->
		<profile>
			<id>sqlserver</id>
			<properties>
				<tomcat.context.file>${project.basedir}/src/test/resources/tomcat/context-sqlserver.xml</tomcat.context.file>
			</properties>
			<build>
				<filters>
					<filter>${basedir}/src/main/filters/database/sqlserver.properties</filter>
				</filters>
			</build>
		</profile>


		<!-- Entorno: local -->
		<profile>
			<id>local</id>
			<build>
				<filters>
					<filter>${basedir}/src/main/filters/environment/local.properties</filter>
				</filters>
			</build>
		</profile>

		<!-- Entorno: integracion -->
		<profile>
			<id>integracion</id>
			<build>
				<filters>
					<filter>${basedir}/src/main/filters/environment/integration.properties</filter>
				</filters>
			</build>
		</profile>

	</profiles>

</project>