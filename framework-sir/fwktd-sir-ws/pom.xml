		<profile>
			<id>functional-test</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<includes>
								<include>**/*FunctionalTest.java</include>
							</includes>
						</configuration>
						<executions>
							<execution>
								<id>integration-tests</id>
