	<build>

		<filters>
			<!-- Por defecto la base de datos h2 -->
			<filter>${basedir}/src/main/filters/database/h2.properties</filter>
		</filters>

		<resources>
			<resource>
        		<directory>${basedir}/src/main/resources</directory>
        		<filtering>true</filtering>
      		</resource>
		</resources>

		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>castor-maven-plugin</artifactId>
				<version>${castor.maven.plugin}</version>
				<executions>
					<execution>
						<configuration>
							<schemaDirectory>src/main/resources/xsd</schemaDirectory>
							<packaging>es.ieci.tecdoc.fwktd.sir.api.schema</packaging>
						</configuration>
						<goals>
							<goal>generate</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>axistools-maven-plugin</artifactId>
				<version>${axistools-maven-plugin.version}</version>
				<executions>
					<execution>
						<id>generate-sources-wssir1</id>
						<phase>generate-sources</phase>
						<configuration>
							<sourceDirectory>${basedir}/src/main/resources/wsdl</sourceDirectory>
							<wsdlFiles>
								<wsdlFile>WS_SIR1.wsdl</wsdlFile>
							</wsdlFiles>
							<packageSpace>es.ieci.tecdoc.fwktd.sir.api.service.wssir1</packageSpace>
						</configuration>
						<goals>
							<goal>wsdl2java</goal>
						</goals>
					</execution>
					<execution>
						<id>generate-sources-wssir6a</id>
						<phase>generate-sources</phase>
						<configuration>
							<sourceDirectory>${basedir}/src/main/resources/wsdl</sourceDirectory>
							<wsdlFiles>
								<wsdlFile>WS_SIR6_A.wsdl</wsdlFile>
							</wsdlFiles>
							<packageSpace>es.ieci.tecdoc.fwktd.sir.api.service.wssir6a</packageSpace>
						</configuration>
						<goals>
							<goal>wsdl2java</goal>
						</goals>
					</execution>
					<execution>
						<id>generate-sources-wssir6b</id>
						<phase>generate-sources</phase>
						<configuration>
							<sourceDirectory>${basedir}/src/main/resources/wsdl</sourceDirectory>
							<wsdlFiles>
								<wsdlFile>WS_SIR6_B.wsdl</wsdlFile>
							</wsdlFiles>
							<packageSpace>es.ieci.tecdoc.fwktd.sir.api.service.wssir6b</packageSpace>
						</configuration>
						<goals>
							<goal>wsdl2java</goal>
						</goals>
					</execution>
					<execution>
						<id>generate-sources-wssir7</id>
						<phase>generate-sources</phase>
						<configuration>
							<sourceDirectory>${basedir}/src/main/resources/wsdl</sourceDirectory>
							<wsdlFiles>
								<wsdlFile>WS_SIR7.wsdl</wsdlFile>
							</wsdlFiles>
							<packageSpace>es.ieci.tecdoc.fwktd.sir.api.service.wssir7</packageSpace>
						</configuration>
						<goals>
							<goal>wsdl2java</goal>
						</goals>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>axis</groupId>
						<artifactId>axis</artifactId>
						<version>${axis.version}</version>
					</dependency>
					<dependency>
					    <groupId>javax.mail</groupId>
					    <artifactId>mail</artifactId>
					    <version>${javax.mail.version}</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>${assembly.plugin.version}</version>
				<configuration>
					<descriptors>
						<descriptor>
							${basedir}/src/main/assembly/dep.xml
						</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>assembly-configurable-resources</id>
						<goals>
							<goal>single</goal>
						</goals>
						<phase>package</phase>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<excludes>
						<exclude>**/TestUtils.java</exclude>
					</excludes>
				</configuration>
				<executions>
					<execution>
						<id>integration-tests</id>
						<phase>integration-test</phase>
						<goals>
							<goal>test</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

