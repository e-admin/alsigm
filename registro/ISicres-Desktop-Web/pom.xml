<?xml version="1.0" encoding="UTF-8"?><project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>InvesSicres</artifactId>
		<groupId>es.ieci.tecdoc.isicres</groupId>
		<version>8.0.5-M1</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>ISicres-Desktop-Web</artifactId>
	<name>ISicres-Desktop-Web</name>
	<packaging>war</packaging>
	<description>Modulo de Presentación InvesSicres</description>

	<properties>
		<documents.manager.scope>compile</documents.manager.scope>
		<alfresco.manager.scope>provided</alfresco.manager.scope>
	</properties>

	<dependencies>
		<!-- Dependencias de InvesSicres -->

		<dependency>
			<groupId>es.ieci.tecdoc.isicres</groupId>
			<artifactId>ISicres-Api</artifactId>
			<version>${pom.version}</version>

		</dependency>

		<dependency>
			<groupId>es.ieci.tecdoc.isicres</groupId>
			<artifactId>ISicres-Desktop-Jar</artifactId>
			<version>${pom.version}</version>
			<exclusions>
				<exclusion>
					<groupId>xml-security</groupId>
					<artifactId>xmlsec</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>es.ieci.tecdoc.isicres</groupId>
			<artifactId>ISicres-Desktop-Api</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>es.ieci.tecdoc.fwktd</groupId>
			<artifactId>fwktd-core</artifactId>
			<version>${fwktd.version}</version>
			<exclusions>
				<exclusion>
					<groupId>org.springframework</groupId>
					<artifactId>spring-orm</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>es.ieci.tecdoc.isicres</groupId>
			<artifactId>ISicres-PersonManager</artifactId>
			<version>${pom.version}</version>
			<exclusions>
				<exclusion>
					<groupId>xerces</groupId>
					<artifactId>xercesImpl</artifactId>
				</exclusion>
				<exclusion>
					<groupId>es.ieci.tecdoc.fwktd</groupId>
					<artifactId>fwktd-core</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>es.ieci.tecdoc.isicres</groupId>
			<artifactId>ISicres-EventsManager</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>es.ieci.tecdoc.isicres</groupId>
			<artifactId>ISicres-Compulsa-Connector-Invesicres</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>es.ieci.tecdoc.isicres</groupId>
			<artifactId>ISicres-Document-Connector-Invesdoc</artifactId>
			<version>${pom.version}</version>
			<scope>${documents.manager.scope}</scope>
		</dependency>
		<dependency>
			<groupId>es.ieci.tecdoc.isicres</groupId>
			<artifactId>ISicres-Document-Connector-Alfresco</artifactId>
			<version>${pom.version}</version>
			<scope>${alfresco.manager.scope}</scope>
		</dependency>

		<!-- 3er Party -->
		<dependency>
			<groupId>org.apache.tiles</groupId>
			<artifactId>tiles-api</artifactId>
			<version>2.1.4</version>
		</dependency>
		<dependency>
			<groupId>org.apache.tiles</groupId>
			<artifactId>tiles-core</artifactId>
			<version>2.1.4</version>
		</dependency>
		<dependency>
			<groupId>org.apache.tiles</groupId>
			<artifactId>tiles-jsp</artifactId>
			<version>2.1.4</version>
		</dependency>
		<dependency>
			<groupId>org.apache.tiles</groupId>
			<artifactId>tiles-servlet</artifactId>
			<version>2.1.4</version>
		</dependency>

		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>${log4j.version}</version>
		</dependency>
		<dependency>
			<groupId>taglibs</groupId>
			<artifactId>standard</artifactId>
			<version>1.0.6</version>
		</dependency>

		<dependency>
			<artifactId>displaytag</artifactId>
			<groupId>displaytag</groupId>
			<version>1.1</version>
			<exclusions>
				<exclusion>
					<groupId>com.lowagie</groupId>
					<artifactId>itext</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>commons-digester</groupId>
			<artifactId>commons-digester</artifactId>
			<version>1.8.1</version>
		</dependency>

		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<version>2.5</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax.servlet.jsp</groupId>
			<artifactId>jsp-api</artifactId>
			<version>2.1</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>jstl</artifactId>
			<version>1.2</version>
		</dependency>
	</dependencies>
	<build>
		<finalName>ISicres</finalName>
		<resources>
			<resource>
				<filtering>true</filtering>
				<directory>${basedir}/src/main/resources</directory>
			</resource>
			<resource>
				<filtering>false</filtering>
				<directory>../ISicres-Document-Connector-Alfresco/src/main/resources</directory>
			</resource>
		</resources>
		<filters>
			<filter>${basedir}/src/main/filters/Common.properties</filter>
		</filters>

		<plugins>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>tomcat-maven-plugin</artifactId>
				<version>1.0-beta-1</version>
				<configuration>
					<mode>both</mode>
					<contextFile>${project.basedir}/src/test/resources/tomcat/context.xml
					</contextFile>
				</configuration>
			</plugin>


			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1.1</version>
				<configuration>
					<webXml>
						${basedir}/src/main/webapp/WEB-INF/web.xml
					</webXml>
					<escapeString>\</escapeString>
					<webResources>
						<resource>
							<directory>
								${basedir}/src/main/webapp/WEB-INF
							</directory>
							<targetPath>WEB-INF</targetPath>
							<filtering>true</filtering>
						</resource>
					</webResources>
				</configuration>
			</plugin>

			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.1</version>
				<configuration>
					<descriptors>
						<descriptor>
							${basedir}/src/main/assembly/dep-resources-config.xml
						</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>assembly-config-resources</id>
						<goals>
							<goal>single</goal>
						</goals>
						<phase>package</phase>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<profiles>

		<!-- Perfiles de construccion en funcion de la base de datos -->
		<profile>
			<id>oracle</id>
			<activation>
				<property>
					<name>oracle</name>
				</property>
			</activation>
			<build>
				<filters>
					<filter>
						${basedir}/src/main/filters/database/Oracle.properties
					</filter>
				</filters>
			</build>
		</profile>
		<profile>
			<id>postgres</id>
			<activation>
				<activeByDefault>true</activeByDefault>
				<property>
					<name>postgres</name>
				</property>
			</activation>
			<build>
				<filters>
					<filter>
						${basedir}/src/main/filters/database/Postgres.properties
					</filter>
				</filters>
			</build>
		</profile>
		<profile>
			<id>sqlserver</id>
			<activation>
				<property>
					<name>sqlserver</name>
				</property>
			</activation>
			<build>
				<filters>
					<filter>
						${basedir}/src/main/filters/database/SqlServer.properties
					</filter>
				</filters>
			</build>
		</profile>
		<profile>
			<id>db2</id>
			<activation>
				<property>
					<name>db2</name>
				</property>
			</activation>
			<build>
				<filters>
					<filter>
						${basedir}/src/main/filters/database/DB2.properties
					</filter>
				</filters>
			</build>
		</profile>

		<!-- Perfiles de construccion en funcion del servidor de aplicaciones -->
		<profile>
			<id>tomcat</id>
			<activation>
				<property>
					<name>tomcat</name>
				</property>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
				<filters>
					<filter>
						${basedir}/src/main/filters/server/Tomcat.properties
					</filter>
				</filters>
			</build>
		</profile>
		<profile>
			<id>jboss</id>
			<activation>
				<property>
					<name>jboss</name>
				</property>
			</activation>
			<build>
				<filters>
					<filter>
						${basedir}/src/main/filters/server/JBoss.properties
					</filter>
				</filters>
			</build>
		</profile>
		<profile>
			<id>websphere</id>
			<activation>
				<property>
					<name>websphere</name>
				</property>
			</activation>
			<build>
				<filters>
					<filter>
						${basedir}/src/main/filters/server/WebSphere.properties
					</filter>
				</filters>
			</build>
		</profile>
		<profile>
			<id>weblogic</id>
			<activation>
				<property>
					<name>weblogic</name>
				</property>
			</activation>
			<build>
				<filters>
					<filter>
						${basedir}/src/main/filters/server/Weblogic.properties
					</filter>
				</filters>
			</build>
		</profile>

		<!-- Perfiles de construccion en funcion del S.O. -->
		<profile>
			<id>unix</id>
			<activation>
				<property>
					<name>unix</name>
				</property>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
				<filters>
					<filter>
						${basedir}/src/main/filters/system/Unix.properties
					</filter>
				</filters>
			</build>
		</profile>
		<profile>
			<id>win</id>
			<activation>
				<property>
					<name>win</name>
				</property>
			</activation>
			<build>
				<filters>
					<filter>
						${basedir}/src/main/filters/system/Windows.properties
					</filter>
				</filters>
			</build>
		</profile>

		<!-- Perfiles de construccion en funcion del sistema de autenticación -->
		<profile>
			<id>invesdoc</id>
			<activation>
				<property>
					<name>invesdoc</name>
				</property>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
				<filters>
					<filter>
						${basedir}/src/main/filters/authentication/Invesdoc.properties
					</filter>
				</filters>
			</build>
		</profile>
		<profile>
			<id>ldap</id>
			<activation>
				<property>
					<name>ldap</name>
				</property>
			</activation>
			<build>
				<filters>
					<filter>
						${basedir}/src/main/filters/authentication/Ldap.properties
					</filter>
				</filters>
			</build>
		</profile>

		<!-- Perfil para seleccionar el tipo de repositorio documental -->
		<profile>
			<id>repIdoc</id>
			<activation>
				<property>
					<name>repIdoc</name>
				</property>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
				<filters>
					<filter>
						${basedir}/src/main/filters/repository/RepInvesdoc.properties
					</filter>
				</filters>
			</build>
		</profile>
		<profile>
			<id>repAlfresco</id>
			<activation>
				<property>
					<name>repAlfresco</name>
					<value>true</value>
				</property>
			</activation>
			<properties>
				<alfresco.manager.scope>compile</alfresco.manager.scope>
			</properties>
			<build>
				<filters>
					<filter>
						${basedir}/src/main/filters/repository/RepAlfresco.properties
					</filter>
				</filters>
			</build>
		</profile>

		<!-- Perfil para seleccionar el tipo de compulsa -->
		<profile>
			<id>compulsaIS</id>
			<activation>
				<property>
					<name>compulsaIS</name>
				</property>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
				<filters>
					<filter>
						${basedir}/src/main/filters/compulsa/ISicresCompulsa.properties
					</filter>
				</filters>
			</build>
		</profile>

		<!-- Perfil para seleccionar el tipo de carga de los resources de configuracion -->
		<profile>
			<id>configLocation</id>
			<activation>
				<property>
					<name>configLocation</name>
				</property>
			</activation>
			<build>
				<resources>
					<resource>
						<filtering>true</filtering>
						<directory>${basedir}/src/main/config</directory>
					</resource>
				</resources>
			</build>
		</profile>
	</profiles>
</project>