<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Configuracion de las transacciones -->
	<bean id="isicresTransactionManagerTest"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource">
			<ref bean="dataSourceTest" />
		</property>
	</bean>


	<bean id="isicresTransactionTemplateTest" abstract="true"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager">
			<ref bean="isicresTransactionManagerTest" />
		</property>
		<property name="transactionAttributes">
			<props>
				<!-- Los metodos que comiencen por get en los Manager seran readOnly -->
				<prop key="get*">PROPAGATION_REQUIRED,readOnly</prop>
				<prop key="find*">PROPAGATION_REQUIRED,readOnly</prop>
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>
	
	<alias name="isicresTransactionManagerTest" alias="transactionManager" />

</beans>