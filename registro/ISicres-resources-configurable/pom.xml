<?xml version="1.0" encoding="UTF-8"?><project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>InvesSicres</artifactId>
		<groupId>es.ieci.tecdoc.isicres</groupId>
		<version>8.0.5-M1</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>ISicres-resources-configurable</artifactId>
	<name>ISicres-resources-configurable</name>
	<packaging>pom</packaging>
	<description>Recursos Configurables</description>
	
	
	<build>
		<finalName>ISicres-resources-configurable</finalName>				
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.1</version>
				<configuration>
					<descriptors>						
						<descriptor>
							src/main/assembly/dep-resources-config.xml
						</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>assembly-configurable-resources</id>
						<goals>
							<goal>single</goal>
						</goals>
						<phase>install</phase>
					</execution>
				</executions>
			</plugin>			
			<plugin>
				<artifactId>maven-install-plugin</artifactId>
				<version>2.2</version>				
				<executions>
					<execution>
						<id>install-configurable-config</id>
						<phase>install</phase>
						<goals>
							<goal>install-file</goal>
						</goals>
						<configuration>
							<groupId>es.ieci.tecdoc.isicres</groupId>
							<artifactId>${pom.artifactId}</artifactId>
							<version>${pom.version}</version>
							<packaging>zip</packaging>
							<file>${project.build.directory}/${project.build.finalName}.zip</file>
						</configuration>
					</execution>										
				</executions>
			</plugin>
			
		</plugins>
	</build>	
</project>