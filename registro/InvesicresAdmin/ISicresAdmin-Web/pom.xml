				<groupId>com.thoughtworks.xstream</groupId>
				<artifactId>xstream</artifactId>
		        </exclusion>
			</exclusions>
		</dependency>

	</dependencies>

	<build>
		<finalName>ISicresAdminWeb</finalName>

		<resources>
			<resource>
				<filtering>true</filtering>
				<directory>${basedir}/src/main/resources</directory>
			</resource>
			<resource>
				<filtering>true</filtering>
				<directory>${unpack.config.directory}</directory>
			</resource>
		</resources>
		<filters>
			<filter>${basedir}/src/main/filters/Common.properties</filter>
		</filters>

		<plugins>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>tomcat-maven-plugin</artifactId>
				<version>1.0-beta-1</version>
				<configuration>
					<mode>both</mode>
					<contextFile>${project.basedir}/src/test/resources/tomcat/context.xml</contextFile>
				</configuration>

			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.1</version>
				<executions>
					<execution>
						<id>unpack-config-resources</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>es.ieci.tecdoc.isicres</groupId>
									<artifactId>ISicres-resources-config</artifactId>
									<version>${pom.version}</version>
									<type>zip</type>
									<overWrite>false</overWrite>
									<excludes>
										errors*.properties,
										labels*.properties,
										messages*.properties,
										ldap.properties, **/*registro,
										displaytag.properties, displaytag*.properties,
										**/*ISicres-DesktopWeb.properties,
										**/*ISicres-DesktopWeb_ca_ES.properties,
										**/*ISicres-DesktopWeb_eu_ES.properties,
										**/*ISicres-DesktopWeb_gl_ES.properties
									</excludes>
								</artifactItem>
								<artifactItem>
									<groupId>es.ieci.tecdoc.isicres</groupId>
									<artifactId>ISicres-resources-configurable</artifactId>
									<version>${pom.version}</version>
									<type>zip</type>
									<overWrite>false</overWrite>
								</artifactItem>
							</artifactItems>
							<excludes>log4j.xml</excludes>
							<outputDirectory>
								${unpack.config.directory}
							</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- <plugin> <groupId>org.apache.maven.plugins</groupId> <artifactId>maven-assembly-plugin</artifactId>
				<version>2.2-beta-5</version> <executions> <execution> <id>assembly-resources</id>
				<phase>package</phase> <goals> <goal>single</goal> </goals> <configuration>
				<descriptors> <descriptor> ${basedir}/src/main/assembly/dep-resources-config.xml
				</descriptor> </descriptors> </configuration> </execution> </executions>
				</plugin> -->
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1-alpha-1</version>
				<configuration>
					<webXml>
						${basedir}/src/main/webapp/WEB-INF/web.xml
					</webXml>
					<webResources>
						<resource>
							<directory>
								${basedir}/src/main/webapp/WEB-INF
							</directory>
							<targetPath>WEB-INF</targetPath>
							<filtering>true</filtering>
						</resource>
					</webResources>
				</configuration>
			</plugin>
		</plugins>

	</build>
	<profiles>

